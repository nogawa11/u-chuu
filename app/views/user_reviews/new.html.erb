<div class="row pt-5 mt-5 mb-5 d-flex justify-content-center">
  <div class="col col-6 mb-5">
    <div class="d-flex justify-content-center">
      <h2 class="offwhite trispace mb-3">Leave a review for <%= @user.name.downcase.capitalize %></h2>
    </div>
    <div class="card p-3">
      <%= simple_form_for [@user, @user_review] do |f| %>
        <%= f.input :rating, collection: 0..5, include_blank: false %>
        <%= f.input :comment %>
        <%= f.input :review_type, collection: UserReview.review_types.keys, label: "Was #{@user.name.downcase.capitalize} a host or guest?", include_blank: false %>
        <%= f.submit class:"btn btn-primary w-100 mt-2" %>
      <% end %>
    </div>
  </div>
</div>
