<div class="container mt-5 pt-5">
  <div class="d-flex align-items-center gap-3 justify-content-between">
    <h1 class="d-inline-block trispace">My Planets</h1>
    <%= link_to "<i class='fas fa-plus'></i> Add a planet".html_safe, new_planet_path, class:"add-review-button" %>
  </div>
  <div class="planet-cards mt-3 mb-5">
    <% @planets.each do |planet| %>
      <div class="card-planet" style="border: 1px solid #FFFFFF">
        <% if planet.photos.first.present? %>
          <%= cl_image_tag(planet.photos.first.key) %>
        <% else %>
          <%= image_tag "https://images.unsplash.com/photo-1506443432602-ac2fcd6f54e0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" %>
        <% end %>
        <div class="mt-3 mb-3">
          <div class="d-flex justify-content-center">
            <h5><%= planet.name %></h5>
          </div>
          <div class="d-flex gap-3 ms-auto justify-content-center">
            <%= link_to "View", planet_path(planet), class:"btn btn-outline-warning" %>
            <%= link_to "Edit", edit_planet_path(planet), class:"btn btn-outline-info" %>
            <%= link_to "Delete", planet_path(planet), method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-outline-danger"  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
